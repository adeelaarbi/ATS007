@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

@*@section Styles{
    @await Html.PartialAsync("_EnvironmentCSSPartial")
}*@

<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <h1>Login</h1>
    <div asp-validation-summary="All" class="text-danger" style="text-align: left"></div>
    <div class="form-group" style="text-align: left">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" style="margin-bottom:0px;" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group" style="text-align: left">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" style="margin-bottom:0px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group" style="text-align: left;">
        <div class="icheckbox_flat-green" >
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" class="flat"/>
                <ins class="iCheck-helper"></ins>
            </label>
        </div>
        @Html.DisplayNameFor(m => m.RememberMe)        
    </div>      
   
    <div class="clearfix"></div>
        
    <div class="separator">
        <div class="form-group" style="text-align: left">
            <a asp-action="ForgotPassword">Forgot your password?</a>
            <button type="submit" class="btn btn-default pull-right">Log in</button>
        </div>
        <div class="clearfix"></div>
        <div>
            <h1><i class="fa fa-paw"></i>  ATS007</h1>
            <p>©2018 All Rights Reserved. </p>
        </div>
    </div>
        
</form>
